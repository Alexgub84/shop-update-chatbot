# Server
PORT=3000
LOG_LEVEL=info
MOCK_MODE=true  # Set to false for production
FAKE_GREENAPI_MODE=false  # Set to true for Docker flow tests with verbose logging

# Trigger (optional - if not set, responds to any message)
TRIGGER_CODE=test-shop

# Session (optional)
SESSION_TIMEOUT_MS=300000  # 5 minutes (default)

# Green API
GREEN_API_INSTANCE_ID=your_instance_id
GREEN_API_TOKEN=your_api_token

# WooCommerce API
WOOCOMMERCE_STORE_URL=https://your-store.com
WOOCOMMERCE_CONSUMER_KEY=ck_your_consumer_key
WOOCOMMERCE_CONSUMER_SECRET=cs_your_consumer_secret

# Production Testing (optional)
TEST_CHAT_ID=your_phone@c.us  # WhatsApp chat ID for prod tests
