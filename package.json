{
  "name": "shop-update-chatbot",
  "version": "1.0.0",
  "description": "WhatsApp chatbot for shop inventory management via Green API",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "test": "npm run lint && vitest run",
    "test:watch": "vitest",
    "test:prod": "vitest run tests/prod/",
    "lint": "tsc --noEmit"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "dotenv": "^16.4.7",
    "fastify": "5.2.1",
    "pino": "9.6.0",
    "zod": "3.24.1"
  },
  "devDependencies": {
    "@types/node": "22.10.7",
    "tsx": "4.19.2",
    "typescript": "5.7.3",
    "vitest": "2.1.8"
  }
}
